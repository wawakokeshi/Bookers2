<h1>User info</h1>
<%= form_with model: @user, local:true do |f| %>
 <label for="inputName">Name</label>
 <p><%= f.text_field :name, id:"inputName" %></p>
 <label for="inputImage">Image</label>
 <p><%= f.file_field :profile_image, accept: "image/*" %></p>
 <label for="inputIntroduction">Introduction</label>
 <p><%= f.text_field :introduction, id:"introduction" %></p>
 <%= f.submit "Update User", class: "btn btn-primary btn-sm mt-2 mb-2"%>
 
<% end %>

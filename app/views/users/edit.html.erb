<div class= "container">
 <div class= "row">
  <div class="mt-3 mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
   <h2>User info</h2>
   
   <span class="devise-error-messages">
   <% if @user.errors.any? %>
   <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
   <ul>
     <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
   <% end %>
   </span>
   
    <%= form_with model: @user, local:true do |f| %>
     <label for="inputName">Name</label>
     <p><%= f.text_field :name, id:"inputName" %></p>
     <label for="inputImage">Image</label>
     <p><%= f.file_field :profile_image, accept: "image/*" %></p>
     <label for="inputIntroduction">Introduction</label>
     <p><%= f.text_area :introduction, id:"introduction" %></p>
    <%= f.submit "Update User", class: "btn btn-secondary btn-sm mt-2 mb-2"%>
    <% end %>
  </div>
 </div>
</div>
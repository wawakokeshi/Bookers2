<div class = "container px-5 px-sm-0">
 <div class = "row">
  <div class = "col-md-3">
   <%= render 'users/info', user: @user %>
   <%= render 'form', book: @book %>
  </div>
  
  <div class = "mt-3 col-md-8 offset-md-1">
   <h2>Book detail</h2>
    <table class = "table table-hover table-inverse">
     <tbody>
      <tr>
       <td>
        <%= image_tag @bookid.user.get_profile_image(50,50) %><br>
        <%= link_to @bookid.user.name, user_path(@bookid.user.id) %>
       </td>     
       <td><%= link_to @bookid.title, book_path(@bookid.id) %></td>
       <td><%= @bookid.body %></td>
       <% if @bookid.user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@bookid.id), class: "btn btn-success btn-sm mt-2 mb-2" %></td>
       <td><%= link_to "Destroy", book_path(@bookid), method: :delete, class: "btn btn-danger btn-sm mt-2 mb-2", "data-confirm" => "本当に消しますか？" %></td>
       <% end %>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
 </div>
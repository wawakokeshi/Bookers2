<div class= "container">
 <div class= "row">
  <div class="mx-auto">

   <h1 class = "mt-3">Editing Book</h1>
   <%= form_with model: @book, local:true do |f| %>
    <label for="inputTitle">Title</label>
    <p><%= f.text_field :title, id:"inputTitle" %></p>
    <label for="inputBody">Opinion</label>
    <p><%= f.text_field :body, id:"Body" %></p>
    <p><%= f.submit "Update Book", class: "btn btn-success btn-sm mt-2 mb-2"%></p>
   <% end %>

  <p><%= link_to "Show", book_path(@book)%> | <%= link_to "Back", books_path %></p>
  </div>
 </div>
  </div>
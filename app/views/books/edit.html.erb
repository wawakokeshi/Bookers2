<div class= "container">
 <div class= "row">
  <div class="mt-3 mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

   <h1>Editing Book</h1>
   <span class = "devise-error-messages">
   <% if @book.errors.any? %>
   <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
   <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
   <% end %>
  </span>
   
   <%= form_with model: @book, local:true do |f| %>
    <label for="inputTitle">Title</label>
    <p><%= f.text_field :title, id:"inputTitle" %></p>
    <label for="inputBody">Opinion</label>
    <p><%= f.text_area :body, id:"Body" %></p>
    <p><%= f.submit "Update Book", class: "btn btn-success btn-sm mt-2 mb-2"%></p>
   <% end %>

  <p><%= link_to "Show", book_path(@book)%> | <%= link_to "Back", books_path %></p>
  </div>
 </div>
</div>